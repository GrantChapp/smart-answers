<% banner_message = capture do %>
    <%= link_to "Send us your feedback (opens in a new tab)",
      "https://www.smartsurvey.co.uk/s/gov-uk-banner/?c=/check-travel-during-coronavirus/results",
      class: "govuk-link",
      target: "_blank",
      rel: "noopener noreferrer",
      data: {
        module: "gem-track-click",
        "track-action": "survey_clicked",
        "track-category": "user_survey",
        "track-label": "help improve this tool"
      }
    %>
<% end %>

<%= render "components/user_intent_banner", {
  title: "Help improve this tool",
  message: banner_message,
} %>
